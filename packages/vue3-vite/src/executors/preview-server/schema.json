{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "Preview Server",
  "description": "Preview the app build output for development",
  "type": "object",
  "properties": {
    "dist": {
      "type": "string",
      "description": "The build output directory to preview"
    },
    "host": {
      "type": "string",
      "description": "Preview server hostname",
      "default": "localhost"
    },
    "port": {
      "type": "number",
      "description": "Preview server port",
      "default": 3000
    },
    "https": {
      "type": "boolean",
      "description": "HTTS/SSL mode",
      "default": false
    },
    "mode": {
      "type": "string",
      "description": "Default environment mode",
      "default": "development"
    }
  },
  "required": []
}
